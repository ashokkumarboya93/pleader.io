# ===========================================
# Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# MongoDB Connection
# For local development: mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=pleader_ai_db

# Gemini AI API Key
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret for Authentication
# Generate a secure random string
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_random

# CORS Origins (comma-separated)
# For production, specify your frontend domains
# For development, use * for all origins
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.vercel.app

# File Upload Settings
MAX_FILE_SIZE=31457280  # 30MB in bytes

# Rate Limiting (requests per minute)
RATE_LIMIT_RAG=10       # RAG query endpoint
RATE_LIMIT_CHAT=20      # Chat endpoint
RATE_LIMIT_UPLOAD=5     # Document upload endpoint

# Environment (development, production)
ENVIRONMENT=development
